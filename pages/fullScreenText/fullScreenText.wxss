.text{
  left:50%;
  transform: translateX(-50%);
}

.everoneWord{
  text-align: center;
  display:block;
  transform: rotateZ(90deg);
}
.line{
  margin: 20rpx auto;
  width:88%;
  border-radius:8rpx;
  border:1px solid #333;
}
.selectColorText,.lineLeft{
  width:30%;
  text-align: center;
}
.lineLeft{
  background-color:#333;
  color:#fff; 
}
.selectColorValue,.lineRight{
  width:70%;
  padding:0px 8rpx;
  box-sizing: border-box;
}
.inputText,.lineLeft{
  padding:10rpx 0px;
  font:300 normal normal 28rpx/44rpx scans-serif;
  min-height:44rpx;
  height:44rpx;
}
.inputText{
 color:#333; 
}
.colorBlock{
  padding:10rpx;
  color:#fff;
  border-radius:8rpx;
  margin:10rpx auto;
  font:300 normal normal 36rpx/36rpx scans-serif;
  height:36rpx;
}

.confirm1{
  right:10rpx;
  top:50%;
  transform:translateY(-50%);
  width:20rpx;
  height:20rpx;
  border:4rpx solid #fff;
  border-radius:20rpx;
  transition:  all .3s;
}
.confirm2{
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
  width:50%;
  height:50%;
  border-radius:20rpx;
  background-color:#fff;
}

.confirmButton{
  border-radius: 8rpx;
  font:300 normal normal 40rpx/40rpx scans-serif;
  color:#fff;
  background-color:#333;
  text-align: center;
  margin:40rpx auto;
  padding:20rpx 0px;
}